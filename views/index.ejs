<!DOCTYPE html>
<html>
  <head>
    <title>Member</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1>Member Chat</h1>
    <p>Welcome to Member Chat</p>
    <% if (user) {%>
        <p>Logged in as <%= user.first_name %> <%= user.last_name%></p>
        <p><a href="/post-a-message">Post a Message</a></p>
        <p><a href="/become-a-member">Become A Member</a></p>
        <p><a href="/become-an-admin">Become An Admin</a></p>
        <p><a href="/sign-out">Sign Out</a></p>
        <% messages.forEach(message => { %>
          <div class="message">
            <p class="header"><%= message.header %></p>
            <p><%= message.body %></p>
            <% if (user.member == true) {%>
              <p><%= message.user.first_name %> <%= message.user.last_name %></p>
            <% } else {%>
              <p>Members can see message authors.</p>
            <% } %>
            <p><%= message.timestamp %></p>
          </div>
        <% }) %>
    <%} else { %>
        <p>Logged out</p>
        <p><a href="/sign-in">Sign In</a></p>
        <% messages.forEach(message => { %>
          <div class="message">
            <p class="header"><%= message.header %></p>
            <p><%= message.body %></p>
            <p>Members can see message authors.</p>
            <p><%= message.timestamp %></p>
          </div>
        <% }) %>
    <%}%>
  </body>
</html>
